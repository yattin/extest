{
  "name": "browser-extension-test-framework",
  "version": "1.0.0",
  "description": "CDP-based browser extension integration testing framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --config jest.config.unit.js",
    "example": "ts-node test/example.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "dev": "ts-node src/index.ts"
  },
  "dependencies": {
    "chrome-launcher": "^1.0.0",
    "express": "^4.18.2",
    "puppeteer-core": "^21.5.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.326",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/ws": "^8.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}